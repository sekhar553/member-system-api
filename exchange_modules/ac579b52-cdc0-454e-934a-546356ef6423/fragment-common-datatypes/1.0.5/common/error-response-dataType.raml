#%RAML 1.0 DataType

type: object
properties:
  msg:
    required: true
    type: string
    example: "failed operation"
  code:
    required: true
    type: integer
    example: 400
  success:
    required: true
    type: boolean
    example: false
  error:
    required: true
    type: object
    properties:
      "type": 
        type: string
        required: true
        example: "BAD_REQUEST"
      title:
        type: string
        required: true
        example: "Invalid Request"
      details:
        type: string
        required: true
        example: "The input contains invalid data"